@model ENB.Car.Sales.MVC.Models.CreateAndEditCarSold
@using ENB.Car.Sales.Entities
@{
    ViewData["Title"] = "Edit";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Edit Car Sold @ViewBag.Id from @ViewBag.Message</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@ViewBag.Id" asp-route-customerId="@ViewBag.Idcustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CarForSale" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <select id="drpEmpList" class="form-control" asp-for="CarForSaleId" asp-items="@(new SelectList(Model.ListCarForSale, "Value", "Text"))">
                            <option value="0">--Select--</option>
                        </select>
                        <span asp-validation-for="CarForSaleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Agreed_Price" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Agreed_Price" class="form-control" />
                        <span asp-validation-for="Agreed_Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Date_Sold" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Date_Sold" class="form-control" />
                        <span asp-validation-for="Date_Sold" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Monthly_Payment_Amount" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Monthly_Payment_Amount" class="form-control" />
                        <span asp-validation-for="Monthly_Payment_Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Monthly_Payment_Date" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Monthly_Payment_Date" class="form-control" />
                        <span asp-validation-for="Monthly_Payment_Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Other_Details" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <textarea asp-for="Other_Details" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Other_Details" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:25px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="List" asp-route-customerId="@ViewBag.Idcustomer" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
