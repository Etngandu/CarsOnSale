@model ENB.Car.Sales.MVC.Models.CreateAndEditCustomerPreference
@using ENB.Car.Sales.Entities
@{
    ViewData["Title"] = "Create";
    
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Create customer preference for @ViewBag.Message</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-customerId="@ViewBag.Idcust">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CarFeature" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <select id="drpEmpList" class="form-control" asp-for="CarFeatureId" asp-items="@(new SelectList(Model.ListCarFeature, "Value", "Text"))">
                            <option value="0">--Select--</option>
                        </select>
                        <span asp-validation-for="CarFeatureId" class="text-danger"></span>
                    </div>
                </div>                 
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Customer_Preference_Details" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <textarea asp-for="Customer_Preference_Details" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Customer_Preference_Details" class="text-danger"></span>
                    </div>
                </div>
            </div>
                       
            <div class="row" style="margin-top:25px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="List" asp-route-CustomerId="@ViewBag.Idcust" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>            
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
