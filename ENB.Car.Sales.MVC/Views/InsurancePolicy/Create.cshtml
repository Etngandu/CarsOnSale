@model ENB.Car.Sales.MVC.Models.CreateAndEditInsurancePolicy
@using ENB.Car.Sales.Entities;
@{
    ViewData["Title"] = "Create";
    
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Create Customer CarLoan</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-customerId="@ViewBag.Idcustomer" asp-route-carSoldId="@ViewBag.IdcarSold">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="InsuranceCompany" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <select id="drpEmpList" class="form-control" asp-for="InsuranceCompanyId" asp-items="@(new SelectList(Model.ListInsuranceCompany, "Value", "Text"))">
                            <option value="0">--Select--</option>
                        </select>
                        <span asp-validation-for="InsuranceCompanyId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Policy_Start_Date" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Policy_Start_Date" class="form-control" />
                        <span asp-validation-for="Policy_Start_Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Policy_Renewal_Date" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Policy_Renewal_Date" class="form-control" />
                        <span asp-validation-for="Policy_Renewal_Date" class="text-danger"></span>
                    </div>
                </div>  
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Monthtly_payment" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Monthtly_payment" class="form-control" />
                        <span asp-validation-for="Monthtly_payment" class="text-danger"></span>
                    </div>
                </div> 
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Other_Details" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <textarea asp-for="Other_Details" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Other_Details" class="text-danger"></span>
                    </div>
                </div>
            </div>
                       
            <div class="row" style="margin-top:25px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="List" asp-route-customerId="@ViewBag.Idcustomer" asp-route-carSoldId="@ViewBag.IdcarSold" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>            
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
